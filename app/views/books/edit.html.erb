
<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div id = "error_box">
  <h2>
    <%= @book.errors.count %> errors prohibited this book from being saved:
  </h2>
  
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>

<% end %>

 <%= form_with model: @book do |f| %>
<div class = "field" >
  <label>Title</label>
  <label><%= f.text_field :title %></label>
</div>
 
<div class ="field">
  <label>Body</label>
  <label><%= f.text_area :body %></label>
  <label><%= f.submit 'Update Book' %></label>
<% end %>

<%= link_to "Show", book_path, method: :get %> | <%= link_to "Back", books_path, method: :get %>